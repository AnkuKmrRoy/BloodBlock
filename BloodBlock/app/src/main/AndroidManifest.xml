<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.encora.bloodblock">

    <application
        android:name=".BloodBlockApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">



        <activity
            android:theme="@style/AppTheme.NoActionBar"
            android:name="com.encora.bloodblock.ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:theme="@style/AppTheme.NoActionBar"
            android:name="com.encora.bloodblock.ui.login.LoginActivity" />
        <activity
            android:theme="@style/AppTheme.NoActionBar"
            android:name="com.encora.bloodblock.ui.patient.PatientActivity"></activity>
        <activity
            android:theme="@style/AppTheme.NoActionBar"
            android:name="com.encora.bloodblock.ui.bloodbank.BloodBankActivity" />
        <activity
            android:theme="@style/AppTheme.NoActionBar"
            android:name="com.encora.bloodblock.ui.hospital.HospitalActivity"
            android:label="@string/title_activity_hospital" />
    </application>

</manifest>